MDBottomNavigation:
    panel_color: "lightgrey"
    selected_color_background: "navy"
    text_color_active: "white"        


    MDBottomNavigationItem:
        name: 'manual'
        text: 'Manual'
        icon: 'car-shift-pattern'
        
        MDBoxLayout:
            orientation: "horizontal"
            padding: 10
            spacing: 10

            MDBoxLayout:
                orientation: "horizontal"
                spacing: 10

                MDSlider:
                    id: auto_slider_current

                    orientation: "vertical"
                    width: root.width*0.2
                    height: root.height*0.9
                    min: 0
                    max: app.CHAIN_LENGTH
                    value: app.CHAIN_LENGTH-app.current_depth
                    disabled: True
                    track_color_disabled: "lightblue"
                    thumb_color_disabled: "lightblue"
                    
                    

            MDBoxLayout:
                orientation: "vertical"
                spacing: 10

                MDLabel:
                    text: f"Current depth: {format(app.current_depth,'.1f')}m"
                    halign: "center"

                MDIconButton:
                    pos_hint: {"center_x": .5}
                    width: root.width*0.3
                    height: root.height*0.2
                    style: "tonal"
                    theme_text_color: "Custom"
                    text_color: 0, 0.333, 0.494, 1
                    on_press: app.man_anchor_up_press()
                    on_release: app.man_anchor_up_release()
                    icon: "menu-up"
                    icon_size: "200sp"
                    text: "Up"
                    font_size: "40sp"

                MDIconButton:
                    pos_hint: {"center_x": .5}
                    width: root.width*0.3
                    height: root.height*0.2
                    style: "tonal"
                    theme_text_color: "Custom"
                    text_color: 0, 0.333, 0.494, 1
                    icon_size: "200sp"
                    on_press: app.man_anchor_down_press()
                    on_release: app.man_anchor_down_release()
                    icon: "menu-down"
                    text: "Down"

                MDLabel:
                    text: f"{app.debug_msg}"
                    halign: "center"

    
    MDBottomNavigationItem:
        name: 'auto'
        text: 'Automatic'
        icon: 'car-child-seat'
    
        MDBoxLayout:
            orientation: "horizontal"
            padding: 10
            spacing: 10

            MDBoxLayout:
                orientation: "horizontal"
                spacing: 10

                MDSlider:
                    id: auto_slider_current

                    orientation: "vertical"
                    width: root.width*0.2
                    height: root.height*0.9
                    min: 0
                    max: app.CHAIN_LENGTH
                    value: app.CHAIN_LENGTH-app.current_depth
                    disabled: True
                    track_color_disabled: "lightblue"
                    thumb_color_disabled: "lightblue"

                MDSlider:
                    id: auto_slider_target

                    orientation: "vertical"
                    width: root.width*0.2
                    height: root.height*0.9
                    track_color_active: "blue"
                    track_color_inactive: "blue"
                    color:"lightgrey"
                    hint: True
                    min: 0
                    max: app.CHAIN_LENGTH
                    value: app.CHAIN_LENGTH-app.target_depth

                    on_value: app.auto_slider_move(self.value)

            MDBoxLayout:
                orientation: "vertical"
                spacing: 0

                MDLabel:
                    text: f"Current depth: {format(app.current_depth, '.1f')}m"
                    halign: "center"
                    height: self.texture_size[1] + 40

                MDLabel:
                    text: f"Target depth: {format(app.target_depth,'.1f')}m"
                    halign: "center"
                    height: self.texture_size[1] + 40

                MDLabel:
                    text: f"Move by: {format(app.target_depth-app.current_depth,'+.1f')}m"
                    halign: "center"
                    height: self.texture_size[1] + 40

                MDIconButton:
                    text: "Go"
                    pos_hint: {"center_x": 0.5}
                    width: root.width*0.2
                    height: root.height*0.2
                    on_press: app.auto_go()
                    icon: "language-go"
                    text: "Go!"
                    icon_size: "200sp"
                    font_size: "40sp"
                    theme_text_color: "Custom"
                    text_color: 0, 0.333, 0.494, 1
                    
                    
                MDIconButton:
                    text: "Stop"
                    pos_hint: {"center_x": 0.5}
                    width: root.width*0.2
                    height: root.height*0.2
                    on_press: app.auto_stop()
                    icon: "stop"
                    text: "Stop!"
                    icon_size: "200sp"
                    font_size: "40sp"
                    theme_text_color: "Custom"
                    text_color: 0, 0.333, 0.494, 1
                    
                MDLabel:
                    text: f"{app.debug_msg}"
                    halign: "center" 

    MDBottomNavigationItem:
        name: 'calib'
        text: 'Calibrate'
        icon: 'tools'
    
        MDRaisedButton:
            on_press: app.calib_bottom()

            pos_hint: {"center_x": .5, "center_y": .3}
            width: root.width*0.5
            height: root.height*0.2
            icon: "set-split"
            text: "Set: Anchor is down (end of chain)!"
            icon_size: "200sp"
            font_size: "40sp"
            theme_text_color: "Custom"
            text_color: 0, 0.333, 0.494, 1
                    
        MDRaisedButton:
            on_press: app.calib_top()

            pos_hint: {"center_x": .5, "center_y": .8}
            width: root.width*0.5
            height: root.height*0.2
            icon: "set-split"
            icon_size: "200sp"
            text: "Set: Anchor is up!"
            font_size: "40sp"
            icon_size: "200sp"
            font_size: "40sp"
            theme_text_color: "Custom"
            text_color: 0, 0.333, 0.494, 1
